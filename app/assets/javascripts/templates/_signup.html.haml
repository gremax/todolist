%h2 Sign up

.col-md-4.col-md-offset-4
  %form{ng: {submit: 'handleRegBtnClick()', init: 'registrationForm = {}'}, novalidate: true}
    .form-group
      %input.form-control{type: 'email', name: 'user_email', placeholder: 'Email', ng: {model: 'registrationForm.email'}, required: true}
    .form-group
      %input.form-control{type: 'password', name: 'user_password', placeholder: 'Password', ng: {model: 'registrationForm.password'}, required: true}
    .form-group
      %input.form-control{type: 'password', name: 'user_password_confirmation', placeholder: 'Confirm Password', ng: {model: 'registrationForm.password_confirmation'}, required: true}
    %input.btn.btn-primary{type: 'submit', value: 'Sign up'}
