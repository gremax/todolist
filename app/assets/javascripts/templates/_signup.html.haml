%h2 Sign up

.col-md-4.col-md-offset-4
  %form{ng: {submit: 'handleRegBtnClick()', init: 'registrationForm = {}'}}
    .form-group
      %input.form-control{type: 'email', name: 'user_email', placeholder: 'Email', ng: {model: 'registrationForm.email'}}
    .form-group
      %input.form-control{type: 'password', name: 'user_password', placeholder: 'Password', ng: {model: 'registrationForm.password'}}
    .form-group
      %input.form-control{type: 'password', name: 'user_password_confirmation', placeholder: 'Confirm Password', ng: {model: 'registrationForm.password_confirmation'}}
    %input.btn.btn-primary{type: 'submit', value: 'Sign up'}
