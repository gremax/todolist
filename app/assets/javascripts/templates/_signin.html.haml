%h3 Sign in

.col-md-4.col-md-offset-4
  %form{ng: {submit: 'submitLogin(loginForm)', init: 'loginForm = {}'}}
    .form-group.text-center
      %button.btn.btn.btn-block.btn-primary{type: 'button', ng: {click: "authenticate('facebook')"}}Facebook
      %h4 or
    .form-group
      %input.form-control{type: 'email', name: 'email', placeholder: 'Email', ng: {model: 'loginForm.email'}, required: 'required'}
    .form-group
      %input.form-control{type: 'password', name: 'password', placeholder: 'Password', ng: {model: 'loginForm.password'}, required: 'required'}
    %input.btn.btn-primary{type: 'submit', value: 'Sign in'}
